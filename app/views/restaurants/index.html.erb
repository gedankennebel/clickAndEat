<%= stylesheet_link_tag 'restaurants.css.scss' %>

<h2>Check out all new restaurants!</h2>
<table id="latest_restaurants">
  <% @restaurants.each do |restaurant| %>
      <tr>
        <td>
          <%= image_tag restaurant.avatar.url(:thumb) %>
        </td>
        <td>
          <ul class="simple_ul">
            <li class="name"><%= restaurant.name %></li>
            <li>Kitchen:
              <% restaurant.types.each do |type| %>
                  <% if type.eql? restaurant.types.last %>
                      <%= type.name %>
                  <% else %>
                      <%= type.name+ ", " %>
                  <% end %>
              <% end %>
            </li>
            <li class="restaurant_links">
              <%= link_to "show menu", restaurant_menu_path(restaurant.id) %>
              <%= link_to "show details", restaurant_path(restaurant.id) %>
            </li>
          </ul>
        </td>
      </tr>
  <% end %>
</table>
